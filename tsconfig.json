{
  "compilerOptions": {
    "target": "es5",                          
    "module": "CommonJS",                    
    "lib": ["es6"], 
    "types": ["node"],                    
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  }
}